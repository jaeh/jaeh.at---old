{{#if page.title}}
  <header>
    <h1>{{page.title}}</h1>
  </header>
{{/if}}

<div class="content">
  {{#if page.logo}}
    <img 
		src="{{page.logo.src}}" 
		class="floatleft" 
		alt="{{#if page.logo.alt}}{{page.logo.alt}}{{else}}{{page.logo.title}}{{/if}}" 
		title="{{#if page.logo.title}}{{page.logo.title}}{{else}}{{page.logo.alt}}{{/if}}" 
	/>
  {{/if}}
  {{#if page.body}}
    <div>{{page.body}}</div>
  {{/if}}
</div>

{{#if page.footer}}
  <footer>
    {{page.footer}}
  </footer>
{{/if}}
