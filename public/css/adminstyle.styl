body
  width 950px

input.compact
  width 30px

.desc
  font-size .9em
  font-style italic

form
  margin 20px 0

  header
    margin 10px 0 0
    font-size 1.2em
    text-decoration underline

table 
  border-collapse collapse
  border-spacing 0
  text-align left
  width 100%
  
  th, td
    padding 2px 10px 2px 2px
    vertical-align top
    
    img
      float left
  tr
    border-width 0 0 1px 0
    border-style dotted

  th th, td td
    padding 2px 10px 2px 2px
    
  table, tr tr:last-child, tr tr:last-child
    border 0 none

  input, textarea
    background-color #aaa
    color #000
    border-radius 4px
    padding 0 5px
